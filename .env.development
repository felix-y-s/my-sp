# PostgreSQL 환경 설정 예시
# .env.postgresql로 복사하여 사용하세요

# 기본 환경 설정
NODE_ENV=development

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379

# PostgreSQL 데이터베이스 설정
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=purchase_saga_dev
DATABASE_USERNAME=felix
DATABASE_PASSWORD=
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true
DATABASE_SSL=false

# MongoDB 설정 (개발환경)
# MongoDB 연결 URI (전체 연결 문자열, 우선순위 높음)
MONGODB_URI=mongodb://localhost:27017/purchase_saga_dev_mongo
# MongoDB 서버 호스트 주소
MONGODB_HOST=localhost
# MongoDB 서버 포트 번호 (기본값: 27017)
MONGODB_PORT=27017
# MongoDB 데이터베이스 이름
MONGODB_DATABASE=purchase_saga_dev_mongo
# MongoDB 인증 사용자명 (인증이 필요한 경우)
MONGODB_USERNAME=
# MongoDB 인증 비밀번호 (인증이 필요한 경우)
MONGODB_PASSWORD=
# 인증 데이터베이스 (기본값: admin)
MONGODB_AUTH_SOURCE=admin
# SSL/TLS 연결 사용 여부 (운영환경에서 권장)
MONGODB_SSL=false
# 복제셋 이름 (복제셋 사용 시)
MONGODB_REPLICA_SET=
# 최대 연결 풀 크기 (동시 연결 수 제한)
MONGODB_MAX_POOL_SIZE=10
# 최소 연결 풀 크기 (항상 유지할 연결 수)
MONGODB_MIN_POOL_SIZE=1
# 연결 유휴 시간 (밀리초, 이후 연결 종료)
MONGODB_MAX_IDLE_TIME_MS=30000
# 서버 선택 타임아웃 (밀리초)
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
# 소켓 타임아웃 (밀리초, 작업 완료 대기 시간)
MONGODB_SOCKET_TIMEOUT_MS=45000
# 연결 타임아웃 (밀리초, 초기 연결 대기 시간)
MONGODB_CONNECT_TIMEOUT_MS=10000

# 감사 로그 설정
# 감사 로그 저장소 타입 (postgresql 또는 mongodb)
AUDIT_STORAGE_TYPE=mongodb

# 애플리케이션 설정
PORT=3000
APP_NAME=Purchase Saga Development (PostgreSQL)

# 로그 레벨
LOG_LEVEL=debug

# Saga 설정
SAGA_TIMEOUT=300000  # 5분 (밀리초)
SAGA_RETRY_COUNT=3

# 결제 설정 (개발용)
PAYMENT_SUCCESS_RATE=0.9  # 90% 성공률 (테스트용)
PAYMENT_TIMEOUT=2000      # 2초

# 알림 설정
NOTIFICATION_ENABLED=true
NOTIFICATION_TYPE=console  # console, email, sms

# 보안 설정 (개발용)
JWT_SECRET=dev-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://localhost:3001