# 환경 변수 템플릿
# 이 파일을 복사하여 .env.local 또는 .env.{environment} 파일을 생성하세요

# 환경 설정
NODE_ENV=development

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 데이터베이스 설정
DATABASE_TYPE=sqlite  # sqlite, postgres, mysql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=purchase_saga
DATABASE_USERNAME=
DATABASE_PASSWORD=
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=true

# 애플리케이션 설정
PORT=3000
APP_NAME=Purchase Saga

# 로그 설정
LOG_LEVEL=debug  # error, warn, info, debug

# Saga 설정
SAGA_TIMEOUT=300000
SAGA_RETRY_COUNT=3

# 결제 설정
PAYMENT_SUCCESS_RATE=0.9
PAYMENT_TIMEOUT=2000
PAYMENT_GATEWAY_URL=
PAYMENT_API_KEY=

# 알림 설정
NOTIFICATION_ENABLED=true
NOTIFICATION_TYPE=console

# 보안 설정
JWT_SECRET=your-jwt-secret
CORS_ORIGINS=http://localhost:3000