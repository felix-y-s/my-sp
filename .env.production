# 운영 환경 설정
NODE_ENV=production

# Redis 설정 (운영용)
REDIS_HOST=redis-cluster.internal
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0
REDIS_TLS=true

# 데이터베이스 설정 (운영용)
DATABASE_TYPE=postgres
DATABASE_HOST=postgres-primary.internal
DATABASE_PORT=5432
DATABASE_NAME=purchase_saga_prod
DATABASE_USERNAME=saga_user
DATABASE_PASSWORD=your-secure-db-password
DATABASE_SYNCHRONIZE=false  # 운영에서는 false
DATABASE_LOGGING=false
DATABASE_SSL=true
DATABASE_POOL_SIZE=20

# 애플리케이션 설정
PORT=3000
APP_NAME=Purchase Saga Production

# 로그 레벨
LOG_LEVEL=warn

# Saga 설정
SAGA_TIMEOUT=300000  # 5분 (밀리초)
SAGA_RETRY_COUNT=5
SAGA_DEAD_LETTER_QUEUE=true

# 결제 설정 (운영용)
PAYMENT_GATEWAY_URL=https://api.payment-provider.com
PAYMENT_API_KEY=your-production-payment-api-key
PAYMENT_WEBHOOK_SECRET=your-webhook-secret
PAYMENT_SUCCESS_RATE=1.0  # 운영에서는 실제 결제 처리
PAYMENT_TIMEOUT=30000     # 30초

# 알림 설정
NOTIFICATION_ENABLED=true
NOTIFICATION_TYPE=all  # console, email, sms, push

# 이메일 설정
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=noreply@yourcompany.com
SMTP_PASS=your-email-password
SMTP_FROM=Purchase System <noreply@yourcompany.com>

# SMS 설정
SMS_PROVIDER_API_KEY=your-sms-api-key
SMS_FROM_NUMBER=+1234567890

# 푸시 알림 설정
FCM_SERVER_KEY=your-firebase-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apple-team-id

# 보안 설정 (운영용)
JWT_SECRET=your-super-secure-jwt-secret-min-256-bits
JWT_EXPIRES_IN=1h
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

# 모니터링 설정
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health
JAEGER_ENDPOINT=http://jaeger-collector:14268/api/traces

# 레이트 리미팅
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000  # 1분
RATE_LIMIT_MAX_REQUESTS=100

# 캐싱 설정
CACHE_TTL=3600  # 1시간
CACHE_MAX_SIZE=1000

# 로그 설정
LOG_FILE_PATH=/var/log/purchase-saga
LOG_MAX_SIZE=100mb
LOG_MAX_FILES=30

# 백업 설정
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 매일 새벽 2시
BACKUP_RETENTION_DAYS=30